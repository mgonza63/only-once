<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your One Time Message Is Here</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <style>
    .d-none {
      display: none;
    }
  </style>
  <body>
    <button id="revealButton">Click to reveal your message</button>
    <p class="message" id="message"></p>
    <script>
      const revealButton = document.querySelector("#revealButton");
      const message = document.querySelector("#message");

      const API_URL =
        window.location.hostname === "localhost"
          ? `http://localhost:3000/message${window.location.pathname}`
          : `https://www.only-once.com${window.location.pathname}`;
      revealButton.addEventListener("click", async (e) => {
        try {
          const response = await fetch(API_URL, {
            method: "GET",
            headers: {
              "content-type": "application/json",
            },
          });
          const onetimeMessage = await response.json();
          message.innerText = onetimeMessage.text;
        } catch (error) {
          console.log(error);
        }
      });
    </script>
  </body>
</html>
